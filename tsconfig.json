{
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.*"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,

    "lib": ["esnext", "dom"],

    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strictNullChecks": true
  }
}
